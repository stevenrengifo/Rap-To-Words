<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/soundcloud_acknowledgement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/acknowledgements_margin"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:text="@string/soundcloud_acknowledgement"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/app_acknowledgement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_acknowledgement"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/copyright_acknowledgement"/>

    <TextView
        android:id="@+id/copyright_acknowledgement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/acknowledgements_margin"
        android:layout_marginBottom="@dimen/acknowledgements_margin"
        android:text="@string/copyright_acknowledgement"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>